<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeGates.Views.GameScreenParkour">


    <StackLayout Padding="32,16,32,32" BackgroundColor="#171721">
        <Label Text="Thibault" FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>

        <Frame BackgroundColor="#2C2C34" CornerRadius="30" Margin="0,32,0,0" Padding="0,8,0,0">
            <StackLayout>
                <Label Text="Time" FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                <Label Text="2:00" FontSize="124" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="0,0,0,73"/>
            </StackLayout>
        </Frame>

        <Frame BackgroundColor="#2C2C34" CornerRadius="30" Margin="0,32,0,0" Padding="0,8,0,0">
            <StackLayout>
                <Label Text="Points" FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                <Label Text="0" FontSize="124" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="0,0,0,73"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>